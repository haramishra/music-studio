---
import { Image } from "astro:assets";
---

<section class="container bg-coolGray-50">
  <div class="mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full lg:w-1/2 xl:w-5/12 px-4 mb-16 lg:mb-0">
        <div class="max-w-lg mx-auto lg:mx-0 pt-14 pb-12 lg:py-20">
          <h1
            class="font-heading text-6xl xs:text-8xl sm:text-9xl xl:text-10xl tracking-tighter mb-8"
          >
            Let&apos;s talk
          </h1>
          <span class="block text-coolGray-600"
            >Lorem Ipsum is simply dummy text of the</span
          >
          <span class="block font-medium mb-12">contact@example.com</span>
          <form action="">
            <input
              class="block w-full py-4 px-8 h-16 mb-6 text-coolGray-500 bg-transparent border border-coolGray-400 rounded-full"
              type="text"
              placeholder="Full name"
            />
            <input
              class="block w-full py-4 px-8 h-16 mb-6 text-coolGray-500 bg-transparent border border-coolGray-400 rounded-full"
              type="email"
              placeholder="E-mail"
            />
            <textarea
              class="block w-full h-52 py-4 px-8 mb-6 text-coolGray-500 bg-transparent border border-coolGray-400 rounded-3xl resize-none"
              placeholder="Message"
              rows="3"></textarea>
            <div class="mb-10">
              <span class="block font-medium mb-6"
                >What can we help you with?</span
              >
              <div class="sm:flex">
                <div class="mb-4 sm:mb-0 sm:mr-8">
                  <div class="form-check mb-4">
                    <input type="checkbox" value="" />
                    <label class="ml-2">Website design</label>
                  </div>
                  <div class="form-check mb-4">
                    <input type="checkbox" value="" />
                    <label class="ml-2">Website design</label>
                  </div>
                  <div class="form-check">
                    <input type="checkbox" value="" />
                    <label class="ml-2">Website design</label>
                  </div>
                </div>
                <div>
                  <div class="form-check mb-4">
                    <input type="checkbox" value="" />
                    <label class="ml-2">Content creation</label>
                  </div>
                  <div class="form-check mb-4">
                    <input type="checkbox" value="" />
                    <label class="ml-2">Content creation</label>
                  </div>
                  <div class="form-check">
                    <input type="checkbox" value="" />
                    <label class="ml-2">Content creation</label>
                  </div>
                </div>
              </div>
            </div>
            <button
              class="block w-full py-5 px-8 sm:px-24 text-center font-medium text-white leading-none bg-black hover:bg-blue-500 rounded-full transition duration-150"
              type="submit"
            >
              Send message
            </button>
          </form>
        </div>
      </div>
      <div class="w-full lg:w-1/2 xl:w-7/12 px-4">
        <Image
          height={600}
          width={400}
          class="block max-w-lg mx-auto lg:max-w-none h-full w-full rounded-4xl object-cover"
          src="/asitrastudio-assets/contacts/map-color.png"
          alt=""
        />
      </div>
    </div>
  </div>
</section>
