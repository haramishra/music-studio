---
import { Image } from "astro:assets";

const content = {
  title: "Our services",
  description:
    "We offer a range of services to help you at every stage of your musical journey, ensuring your final product is polished and ready for the world to hear.",
  services: [
    {
      title: "Recording Studio",
      image: "/src/assets/images/recording-studio.jpg",
      description:
        "Our state-of-the-art recording studio is equipped with the latest technology and acoustically treated to ensure the highest sound quality.",
    },
    {
      title: "Jamming Space",
      image: "/src/assets/images/jamming-space.jpg",
      description:
        "Need a place to practice with your band or simply want to have a fun jamming session with friends? Our spacious and comfortable jamming rooms are perfect for letting your creativity flow.",
    },
    {
      title: "Music Production",
      image: "/src/assets/images/music-production.jpg",
      description:
        "From mixing and mastering to full-scale music production, our team of professionals is here to bring your music to life. We offer a range of services to help you at every stage of your musical journey.",
    },
  ],
};
---

<section class="py-12 md:py-24 bg-coolGray-50 overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="mb-16 md:mb-32">
      <h2
        class="font-heading text-6xl xl:text-8xl font-bold tracking-tighter"
        set:html={content.title}
      />
    </div>
    <div class="max-w-2xl mx-auto xl:max-w-none">
      <div class="flex flex-wrap -mx-1.5">
        <div class="w-full xl:w-1/2 px-1.5 mb-4 xl:mb-0">
          <div class="h-full border rounded-4xl">
            <Image
              height={500}
              width={200}
              class="block mb-16 w-full h-88 rounded-4xl object-cover"
              src={content.services[0].image}
              alt=""
            />
            <div class="px-6 max-w-lg mx-auto pb-16 text-center">
              <!-- <span
                class="relative inline-block mb-3 py-2 px-3 text-sm text-white leading-none bg-black rounded-full transition duration-200"
                >Interior</span
              > -->
              <span
                class="block text-4xl mb-4"
                set:html={content.services[0].title}
              />
              <p set:html={content.services[0].description} />

              <a
                class="group inline-flex items-center leading-none font-medium pb-2 border-b-2 border-black"
                href="#"
              >
                <span class="mr-4">See all projects</span>
                <span
                  class="group-hover:rotate-45 transform transition duration-100"
                >
                  <svg
                    width="11"
                    height="11"
                    viewBox="0 0 11 11"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      d="M9.5 1.5L1.5 9.5"
                      stroke="black"
                      stroke-width="1.3"
                      stroke-miterlimit="10"
                      stroke-linecap="round"
                      stroke-linejoin="round"></path>
                    <path
                      d="M9.5 8.83571V1.5H2.16429"
                      stroke="black"
                      stroke-width="1.3"
                      stroke-miterlimit="10"
                      stroke-linecap="round"
                      stroke-linejoin="round"></path>
                  </svg>
                </span>
              </a>
            </div>
          </div>
        </div>
        <div class="w-full xl:w-1/2 px-1.5">
          <div class="group block mb-3 border rounded-4xl">
            <div class="flex flex-wrap justify-between">
              <div class="w-full md:w-7/12 pl-6 sm:pl-12 pr-5 py-0 self-center">
                <div class="max-w-xs py-18">
                  <span
                    class="block text-4xl mb-4"
                    set:html={content.services[2].title}
                  />
                  <p set:html={content.services[2].description} />

                  <a href="#">
                    <span
                      class="inline-block mt-3 py-2 px-3 text-sm text-black group-hover:text-white leading-none border-1.5 border-black group-hover:bg-black rounded-full transition duration-200"
                      >contact us</span
                    >
                  </a>
                </div>
              </div>
              <div
                class="w-full md:w-5/12 md:transform group-hover:translate-x-4 transition duration-500"
              >
                <Image
                  height={500}
                  width={200}
                  class="block w-full h-full rounded-4xl object-cover"
                  src={content.services[2].image}
                  alt=""
                />
              </div>
            </div>
          </div>
          <div class="group block border rounded-4xl">
            <div class="flex flex-wrap justify-between">
              <div class="w-full md:w-7/12 pl-6 sm:pl-12 pr-5 py-0 self-center">
                <div class="max-w-xs py-18">
                  <span
                    class="block text-4xl mb-4"
                    set:html={content.services[1].title}
                  />
                  <p set:html={content.services[1].description} />
                  <a href="#">
                    <span
                      class="inline-block mt-3 py-2 px-3 text-sm text-black group-hover:text-white leading-none border-1.5 border-black group-hover:bg-black rounded-full transition duration-200"
                      >contact us</span
                    >
                  </a>
                </div>
              </div>
              <div
                class="w-full md:w-5/12 md:transform group-hover:translate-x-4 transition duration-500"
              >
                <img
                  class="block w-full h-full rounded-4xl object-cover"
                  src={content.services[1].image}
                  alt=""
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
